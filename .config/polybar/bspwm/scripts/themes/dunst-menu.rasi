configuration {
    font:                           "Liberation Mono 10";
    show-icons:                     false;
    /* icon-theme: 			"Papirus"; */
    display-drun: 					":";
    drun-display-format:            "{name}";
    threads:                        0;
    scroll-method:                  0;
    disable-history:                false;
    fullscreen:                     false;
	hide-scrollbar: 				true;
	sidebar-mode: 					false;
    location:                       5;
	xoffset:						-100;
	yoffset:						-22;
    /* anchor:                         5; */
}

@import "colors/00color-choice.rasi"

window {
    transparency:                   "real";
    background-color:               @background;
    text-color:                     @foreground;
    border: 1px;
    border-color: @border;
    border-radius:                  0px;
    height:                         22%;
    width:                          15%;
    /* x-offset:                       -0.5%; */
    /* y-offset:                       3%; */
}

